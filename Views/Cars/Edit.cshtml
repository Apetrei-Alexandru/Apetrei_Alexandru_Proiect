@model Apetrei_Alexandru_Proiect.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" />

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EngineSize" class="control-label"></label>
                <input asp-for="EngineSize" class="form-control" />
                <span asp-validation-for="EngineSize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mileage" class="control-label"></label>
                <input asp-for="Mileage" class="form-control" />
                <span asp-validation-for="Mileage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Brand -->
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <select id="BrandDropdown" asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <!-- Model (FĂRĂ asp-items!-->
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <select id="ModelDropdown" asp-for="ModelId" class="form-control"></select>
                <span asp-validation-for="ModelId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FuelType" class="control-label"></label>
                <select asp-for="FuelTypeId" class="form-control" asp-items="ViewBag.FuelTypeId"></select>
                <span asp-validation-for="FuelTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Transmission" class="control-label"></label>
                <select asp-for="TransmissionId" class="form-control" asp-items="ViewBag.TransmissionId"></select>
                <span asp-validation-for="TransmissionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <select asp-for="ConditionId" class="form-control" asp-items="ViewBag.ConditionId"></select>
                <span asp-validation-for="ConditionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script>
        function loadModels(initialModelId = null) {

            var brandId = $("#BrandDropdown").val();

            $.ajax({
                url: '/Cars/GetModelsByBrand',
                type: 'GET',
                data: { brandId: brandId },
                success: function (models) {

                    var modelDropdown = $("#ModelDropdown");
                    modelDropdown.empty();

                    $.each(models, function (i, model) {
                        modelDropdown.append(
                            $("<option></option>").val(model.modelId).text(model.name)
                        );
                    });

                    // selectăm modelul curent al mașinii
                    if (initialModelId) {
                        modelDropdown.val(initialModelId);
                    }
                }
            });
        }

        // La încărcare — încărcăm modelele pentru brandul curent
        $(document).ready(function () {
            loadModels(@Model.ModelId);
        });

        // La schimbarea brandului — actualizăm modelele
        $("#BrandDropdown").change(function () {
            loadModels();
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
